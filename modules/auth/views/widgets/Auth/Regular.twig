<section class="widget-auth-regular">

  <form action="{{ login_url }}" method="POST" name="regular-login-form">

    <div class="form-row justify-content-center">
      <div class="col-10 col-sm-8 col-md-6 col-lg-4">

        <div class="alert alert-danger d-none" role="alert" data-hidden-class="d-none"></div>

        <div class="form-group">
          <div class="custom-control">
            <input name="user-login" type="text"
                   class="form-control"
                   id="auth-user-login"
                   placeholder="{{ 'auth.regular.login'|i18n }}">
          </div>
        </div>

        <div class="form-group">
          <div class="custom-control">
            <input name="user-password" type="password"
                   class="form-control"
                   id="auth-user-pass"
                   placeholder="{{ 'auth.regular.password'|i18n }}">
          </div>
        </div>

        <button type="submit" class="btn btn-primary">
          {{ 'auth.regular.sign_in'|i18n }}
        </button>

        <a href="{{ access_recovery_url }}" class="btn btn-link mt-3 d-block">
          {{ 'auth.regular.access_recovery'|i18n }}
        </a>

      </div>
    </div>

  </form>
</section>
