{% extends "@notifications/default/email" %}

{% block body %}
    <p>Exception: <strong>{{ message }}</strong></p>

    <p>At these URLs:</p>

    <ul>
        {% for url in urls %}
        <li><a href="{{ url }}">{{ url }}</a></li>
        {% endfor %}
    </ul>

    <p>in these files:</p>

    <ul>
        {% for path in paths %}
            <li>{{ path }}</li>
        {% endfor %}
    </ul><br />

    <p><a href="{{ adminUrl }}"><strong>Stacktrace and other info</strong></a></p>

{% endblock %}
