{% extends layout %}

{% block content %}

  {{ js("ifaces/HttpError500.js") }}
  {{ css("ifaces/HttpError500.css") }}

  <div class="container error-500">
    <div class="row align-items-center h-100">
      <div class="col">

        <div class="card ">
          {% block card_header %}
            <div class="card-header">
              <h4>{{ "error.http.500.label"|i18n }}</h4>
            </div>
          {% endblock %}

          <div class="card-body">

            <p>{{ "error.http.500.p1"|i18n }}</p>
            <p>{{ "error.http.500.p2"|i18n }}</p>
            <p>
              <button class="btn flat cancel-refresh">{{ "error.http.500.button.cancel"|i18n }}</button>
            </p>
          </div>

          <div class="card-footer">

            {#<p>{{ "error.http.500.p3"|i18n({ hash: hash }) }}</p>#}

            <div class="progress">
              <div class="progress-bar bg-info progress-bar-animated progress-bar-striped" role="progressbar"
                   aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

{% endblock %}
