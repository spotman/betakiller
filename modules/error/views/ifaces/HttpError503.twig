{% extends layout %}

{% block content %}

  {{ js("ifaces/HttpError503.js") }}
  {{ css("ifaces/HttpError503.css") }}

  <div class="container error-503" data-duration="{{ duration }}">
    <div class="row align-items-center h-100">
      <div class="col">

        <div class="card">
          {% block card_header %}
            <div class="card-header">
              <h4>{{ "error.http.503.label"|i18n }}</h4>
            </div>
          {% endblock %}

          <div class="card-body">
            <p>{{ "error.http.503.p1"|i18n({ sec: duration }) }}</p>
          </div>

          <div class="card-footer">
            <div class="progress">
              <div class="progress-bar bg-info progress-bar-animated progress-bar-striped" role="progressbar"
                   aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

{% endblock %}
