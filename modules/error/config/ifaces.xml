<?xml version="1.0" encoding="UTF-8" ?>
<root>
    <iface codename="HttpErrorList" uri="errors" label="Error pages" layoutCodename="error" hideInSiteMap="true" zone="admin">
        <iface codename="HttpError400" uri="400" label="error.http.400.label" zone="public" />
        <iface codename="HttpError401" uri="401" label="error.http.401.label" zone="public" layoutCodename="auth" />
        <iface codename="HttpError403" uri="403" label="error.http.403.label" zone="public" />
        <iface codename="HttpError404" uri="404" label="error.http.404.label" zone="public" />
        <iface codename="HttpError500" uri="500" label="error.http.500.label" zone="public" />
    </iface>

    <!-- TODO вынести это всё в файл config/ifaces.php, который добавляет элементы в IFaceModelTree::admin() -->
    <iface uri="errors" codename="Admin_Error_Index" parentCodename="Admin_Index" title="Admin | Errors" label="Errors">
        <iface uri="php-exceptions" codename="Admin_Error_UnresolvedPhpExceptionIndex" title="Admin | Unresolved PhpExceptions" label="Unresolved" entity="PhpException" entityAction="listUnresolved">
            <iface uri="resolved" codename="Admin_Error_ResolvedPhpExceptionIndex" title="Admin | Resolved PhpExceptions" label="Resolved" entity="PhpException" entityAction="listResolved" />
            <iface uri="test" codename="Admin_Error_PhpExceptionTest" label="Test" entity="PhpException" entityAction="test">
                <iface uri="500" codename="Admin_Error_PhpExceptionTestHTTP500" label="HTTP 500 test" />
                <iface uri="logger" codename="Admin_Error_PhpExceptionTestLogger" label="Logger test" />
            </iface>
            <iface uri="{PhpException.hash}" codename="Admin_Error_PhpExceptionItem" title="{PhpException.message}" hasDynamicUrl="true" entity="PhpException" entityAction="read">
                <iface uri="stacktrace" codename="Admin_Error_PhpExceptionStackTrace" title="Stacktrace" layoutCodename="raw" />
            </iface>
        </iface>
    </iface>
</root>
