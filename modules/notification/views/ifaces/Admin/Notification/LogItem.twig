{% extends layout %}

{% block content %}

  <div class="row">
    <div class="col s12">
      <ul>
        <li class="{{ item.is_succeeded ? "green-text" : "red-text" }}">{{ item.status|upper }}</li>
        <li>{{ item.date }}</li>
        <li>{{ item.target }}</li>
      </ul>

      {% if item.subject %}
        <h2>{{ item.subject }}</h2>
      {% endif %}
    </div>

    <div class="col s12">
      <hr>

      <iframe src="{{ item.body_url }}" style="border: none; width: 100%; height: 75vh"></iframe>
    </div>

    {% if item.result %}
      <div class="col s12">
        <hr>
        <h3>Result:</h3>
        <div>{{ item.result }}</div>
      </div>
    {% endif %}
  </div>

{% endblock %}
