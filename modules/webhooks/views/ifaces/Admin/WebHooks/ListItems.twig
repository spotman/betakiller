{% extends layout %}


{% block content %}
  {{ css('webhooks/layout.css') }}

  <section id="admin-webhooks-listItems" class="admin-webhooks-layout">

    <section class="items">

      {% for item in items %}
        <div class="collection">

          {% for key,value in item.info %}

            <div class="collection-item row clear">
                <span class="col s1">
                  {{ key }}:
                </span>
              <span class="col s11">
                  {% if loop.index < 2 %}
                    <a href="{{ item.url }}">
                      {{ value }}
                    </a>
                  {% else %}
                    {{ value }}
                  {% endif %}
                </span>
            </div>

          {% endfor %}

        </div>
      {% endfor %}

    </section>


  </section>
{% endblock %}
