{% if enabled is defined and enabled == true %}

  {# include fonts and materialize layout #}
  {{ css("https://fonts.googleapis.com/icon?family=Material+Icons") }}
  {{ css("widgets/admin-bar.css") }}
  {{ js("widgets/admin-bar.js") }}

  <header id="admin-bar" class="navbar-fixed">
    <nav class="green lighten-5 black-text">
      <div class="nav-wrapper">
        {#<div>#}

          <ul class="right">
            {% if primaryEntity.previewUrl %}
              <li>
                <a href="#!" data-href="{{ primaryEntity.previewUrl }}" class="preview-entity-button" target="_blank">
                  <i class="material-icons left tiny">visibility</i>
                  <span class="hide-on-med-and-down">{{ "admin.bar.preview"|i18n }}</span>
                </a>
              </li>
            {% endif %}

            {% if primaryEntity.adminUrl %}
              <li>
                <a href="{{ primaryEntity.adminUrl }}" class="edit-entity-button">
                  <i class="material-icons left tiny">mode_edit</i>
                  <span class="hide-on-med-and-down">{{ "admin.bar.edit"|i18n }}</span>
                </a>
              </li>
            {% endif %}

            {% if primaryEntity.publicUrl %}
              <li>
                <a href="{{ primaryEntity.publicUrl }}" class="view-entity-button">
                  <i class="material-icons left tiny">done_all</i>
                  <span class="hide-on-med-and-down">{{ "admin.bar.public"|i18n }}</span>
                </a>
              </li>
            {% endif %}
          </ul>

          <ul>

            {% if createButtonItems|length > 0 %}
            <li>
              <a href="#!" data-target="admin-bar-create-dropdown" class="dropdown-trigger">
                <i class="material-icons left">note_add</i>
                <span class="hide-on-med-and-down">{{ "admin.bar.create"|i18n }}</span>
              </a>

              <ul id="admin-bar-create-dropdown" class="dropdown-content">
                {% for item in createButtonItems %}
                <li><a href="{{ item.url }}">{{ item.label }}</a></li>
                {% endfor %}
              </ul>
            </li>
            {% endif %}

            {% if comments %}
            <li>
              <a href="{{ comments.url }}">
                <i class="material-icons left tiny {{ comments.count ? "orange-text" : "" }}">chat</i>
                <span class="hide-on-med-and-down">{{ "admin.bar.comments"|i18n }}</span>
                {% if comments.count %}
                <span class="new badge orange hide-on-med-and-down" data-badge-caption="{{ "admin.bar.comments.new.badge"|plural(comments.count) }}">
                  {{ comments.count }}
                </span>
                {% endif %}
              </a>
            </li>
            {% endif %}

          </ul>




          {#<ul class="right hide-on-med-and-down">#}
            {#<li><a href="sass.html"><i class="material-icons">search</i></a></li>#}
            {#<li><a href="badges.html"><i class="material-icons">view_module</i></a></li>#}
            {#<li><a href="collapsible.html"><i class="material-icons">refresh</i></a></li>#}
            {#<li>#}

            {#</li>#}
          {#</ul>#}
        {#</div>#}
      </div>
    </nav>
  </header>

{% endif %}
