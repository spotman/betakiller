{% extends layout %}

{% block content %}

  <div class="row">
    <div class="col s12">
      <a href="{{ createUrl }}" class="btn right">Create post</a>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <ul class="collection">
        {% for post in posts %}
          <li class="collection-item">
            <a href="{{ post.url }}">{{ post.label }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>

{% endblock %}
