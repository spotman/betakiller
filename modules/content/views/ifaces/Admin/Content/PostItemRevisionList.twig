{% extends layout %}

{% block page_content %}

  <div class="row">
    <div class="col s12">
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <table id="post-revisions" class="bordered highlight">
        <tr>
          <th>ID</th>
          <th>Created at</th>
          <th>Created by</th>
          <th>Is actual</th>
        </tr>

        {% for revision in revisions %}
        <tr>
          <td>
            {{ revision.id }}
          </td>
          <td>{{ revision.created_at }}</td>
          <td>{{ revision.created_by }}</td>
          <td class="text-center">
            {% if revision.is_actual %}
              <button class="btn btn-flat" disabled>
                Actual
              </button>
              {% else %}
                <button class="btn green">
                  {#<i class="small material-icons left">done</i>#}
                  Publish
                </button>
            {% endif %}
          </td>
        </tr>
        {% endfor %}
      </table>
    </div>
  </div>

{% endblock %}
