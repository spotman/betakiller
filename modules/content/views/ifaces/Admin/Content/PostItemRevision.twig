{% extends layout %}

{% block content %}

  {{ css("html-diff.css") }}

  <div class="row">

    <div class="col s12">
      <div class="section">
        <h2>Label</h2>
        <div>{{ revision.label }}</div>
      </div>
    </div>

    <div class="col s12">
      <div class="section">
        <h2>Title</h2>
        <div>{{ revision.title }}</div>
      </div>
    </div>

    <div class="col s12">
      <div class="section">
        <h2>Description</h2>
        <div>{{ revision.description }}</div>
      </div>
    </div>

    <div class="col s12">
      <div class="section">
        <h2>Content</h2>
        <div>{{ revision.content }}</div>
      </div>
    </div>

  </div>

{% endblock %}
