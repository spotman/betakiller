{% if layout in ["image", "button"] %}
  {% set style = "display: block; margin: 15px 0; text-align: center" %}
{% endif %}
<a href="{{ url }}" class="download-attachment"
   target="_blank" rel="noopener noreferrer" style="{{ style|default() }}">
  {% if layout == "image" %}
    {{ image(image, { style: "max-width: 100%" }) }}
  {% elseif layout == "button" %}
    <img src="{{ static("images/download-button.png") }}" alt="{{ "custom_tag.attachment.alt"|i18n({name: name}) }}"/>
  {% else %}{{ label|default("custom_tag.attachment.title"|i18n({name: name})) }}{% endif %}
</a>
