        </iface>
        <iface uri="{ContentComment.id}" codename="Admin_Content_CommentItem" title="Admin | Comments | {ContentComment.id}" hasDynamicUrl="true" entity="ContentComment" entityAction="read" zone="admin" />
    </iface>
